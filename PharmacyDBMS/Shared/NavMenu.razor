<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">PharmacyDBMS</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div>
    <button title="Login" class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="sidebar @NavMenuCssClass">
    

    <div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
        <nav class="flex-column">
        
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Home
                </NavLink>
            </div>

            <div class="nav-item px-2">
                <NavLink class="nav-link" href="/employees">
                    <span class="oi oi-employees" aria-hidden="true"></span> Employees
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/carts">
                    <span class="oi oi-carts" aria-hidden="true"></span> Carts
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/doctors">
                    <span class="oi oi-carts" aria-hidden="true"></span> Doctors
                </NavLink>
            </div>/

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/products">
                    <span class="oi oi-products" aria-hidden="true"></span> Products
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/suppliers">
                    <span class="oi oi-suppliers" aria-hidden="true"></span> Suppliers
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/patients">
                    <span class="oi oi-patients" aria-hidden="true"></span> Doctors
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/prescriptions">
                    <span class="oi oi-prescriptions" aria-hidden="true"></span> Prescriptions
                </NavLink>
            </div>
        </nav>
    </div>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
